---
import Card from "../components/card.astro";
import Chip from "../components/chip.astro";

// Put all your links here
const links: Link[] = [
  {
    desc: "Example Project", // The text that will be rendered
    link: "example.com", // The link
    icon: "fa-solid fa-home", // An icon from Font Awesome: https://fontawesome.com/search?o=r&m=free
  },
  {
    desc: "Cool Project",
    link: "example.com",
    icon: "fa-solid fa-store",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Useful links of stormej" />
    <meta name="author" content="stormej" />
    <meta property="og:title" content="stormej" />
    <meta property="og:image" content="favicon.png" />
    <meta property="og:description" content="Linktree of stormej" />
    <meta property="twitter:description" content="Linktree of stormej" />
    <meta property="twitter:title" content="stormej" />
    <meta property="twitter:image" content="favicon.png" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@ekaksh_janweja" />
    <title>Links</title>
    <style>
      @font-face {
        font-family: Geist;
        src: url(/Geist.ttf);
        font-display: swap;
      }
    </style>
  </head>
  <body
    class="bg-neutral-950 flex justify-center items-center w-screen h-screen font-[Geist] text-neutral-400 p-4"
  >
    <main class="w-[700px] flex flex-col gap-3">
      <div class="flex items-center justify-center">
        <img src="/profile.png" alt="profile" class="w-40 rounded-full" />
      </div>

      <h1 class="md:text-2xl text-3xl font-medium text-center text-neutral-50">
        stormej
      </h1>

      <h2 class="md:text-lg text-center">
        building things | lifting weigths | engineering | valorant
      </h2>

      <h2 class="md:text-lg text-center">Go have some H2O</h2>

      <h3 class="md:text-lg text-center">
        Know more about me here, <a
          href="https://www.stormej.me"
          target="_blank"
          class="underline hover:underline-offset-2 transition duration-500 text-neutral-50"
          >stormej.me</a
        >
      </h3>

      <h3 class="md:text-lg text-center">
        prev <a
          href="https://www.getmerlin.in/"
          target="_blank"
          class="underline hover:underline-offset-2 transition duration-500 text-neutral-500"
          >getmerlin.in</a
        >
      </h3>

      <h3 class="md:text-lg text-center">
        Currently, working at <a
          href="https://digitaldomi.com"
          target="_blank"
          class="underline hover:underline-offset-2 transition duration-500 text-neutral-50"
          >digitaldomi.com</a
        >
      </h3>

      <!-- <div class="grid justify-center gap-4">
        {
          links.map(({ desc, link, icon }) => {
            return <Card {desc} {link} {icon} />;
          })
        }
      </div> -->
      <div class="flex justify-center gap-8">
        <!-- Put some social links who have a definitive icon here: -->

        <Chip link="github.com/ekakshjanweja" icon="fa-brands fa-github" />
        <Chip link="twitter.com/ekaksh_janweja" icon="fa-brands fa-x-twitter" />
        <Chip
          link="www.youtube.com/@ekakshjanweja"
          icon="fa-brands fa-youtube"
        />
        <Chip
          link="www.linkedin.com/in/ekakshjanweja/"
          icon="fa-brands fa-linkedin"
        />
        <Chip
          link="www.instagram.com/ekakshjanweja/"
          icon="fa-brands fa-instagram"
        />
      </div>
      <p class="md:text-lg text-center mx-auto">
        Contact me,
        <a
          href="mailto:jekaksh@gmail.com"
          target="_blank"
          class="underline hover:underline-offset-2 transition duration-500 text-neutral-50"
          >jekaksh@gmail.com</a
        >
      </p>
      <p class="md:text-lg text-center mx-auto">
        <a
          href="https://drive.google.com/file/d/1JBoUUrkOV0H3LnLFNcUy-uhhjMAnWRiV/view"
          target="_blank"
          class="underline hover:underline-offset-2 transition duration-500 text-neutral-50"
          >resume</a
        >
      </p>
    </main>
  </body>
</html>
